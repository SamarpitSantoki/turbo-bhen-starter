{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "import": {
        "default": "./dist/hc.js",
        "types": "./dist/hc.d.ts"
      }
    }
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "db:gen": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "auth:gen": "npx @better-auth/cli generate --config ./src/lib/auth.ts",
    "check": "tsc --noEmit",
    "lint": "npx ultracite@latest lint",
    "lint:fix": "npx ultracite@latest format",
    "format": "npx ultracite@latest format"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.726.1",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.16.4",
    "@prisma/client": "^6.7.0",
    "@scalar/hono-api-reference": "^0.5.156",
    "@types/multer": "^1.4.12",
    "better-auth": "^1.3.7",
    "cloudinary": "^2.5.1",
    "hono": "^4.6.4",
    "mongodb": "^6.11.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "^6.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "ultracite": "latest",
    "@types/bun": "latest"
  }
}
